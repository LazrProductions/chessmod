{
  "schemaVersion": 1,
  "id": "chessmod",
  "version": "${version}",

  "name": "Ultimate Chess",
  "description": "Ever wanted to play chess in Minecraft? Well now you can, and checkers too! This mod adds chess pieces and a chess board to play chess in game!",
  "authors": [
    "LazrProductions"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/ultimate-chess",
    "sources": "https://github.com/LazrProductions/chessmod"
  },

  "license": "CC0-1.0",
  "icon": "assets/chessmod/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [ "net.lazrproductions.chess.util.ChessClientMod" ],
    "main": [
      "net.lazrproductions.chess.ChessMod"
    ]
  },
  "mixins": [
    "chessmod.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  }
}
